<%- include('partials/head')%>

<body>

    <div class="container h-100">

        <div class="jumbotron">
            <h1 class="display-4">Jans Holidays</h1>
        </div>
        <!-- Content here -->
        <div class="row">
            <%
                let isAdmin = true;
                if(isAdmin){
                %>
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Neue Karte</h4>
                            <p class="card-text">
                                Some quick example text to build on the card title
                                and make up the bulk of the card's content.
                            </p>
                            <a href="/form" class="btn btn-secondary">Neue Reise</a>
                        </div>
                    </div>
                </div>
            <%}%>
            <% journeys.forEach(function(journey){ %>
                <div class="col-4">
                    <%- include('partials/card',  {journey:journey, isAdmin:isAdmin})%>
                </div>
            <% }) %>
        </div>

    </div>

    <div class="loadingDiv"></div>

    <script>
        function requestView(view) {
            $(".loadingDiv").show();
            let url = "/" + view;
            $.get(url, function (data) {
                $("body").html(data);
                // alert( "success" );
            })
                .done(function () {
                    $(".loadingDiv").hide();
                })
        }


    </script>

</body>

</html>