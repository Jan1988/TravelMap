<%- include('partials/head')%>

<body>

    <div class="container h-100">

        <div class="jumbotron">
            <div class="row">
                <div class="col-10">
                    <h1 class="display-4">Jans Holidays</h1>
                </div>
                <div class="col-2 ">
                    <% if(isAdmin){ %>
                        <a href="/logout" class="btn btn-secondary float-right">Ausloggen</a>
                    <%}else{%>
                        <a href="/login" class="btn btn-info float-right">Admin</a>
                    <%}%>
                </div>
            </div>
        </div>
        <!-- Content here -->
        <div class="row">
            <% if(isAdmin){%>
                <div class="col-4 mb-3">
                    <div class="card border-3 shadow">
                        <div class="card-body">
                            <h4 class="card-title">Neue Karte</h4>
                            <p class="card-text">
                                Some quick example text to build on the card title
                                and make up the bulk of the card's content.
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="/form" class="btn btn-secondary">Neue Reise</a>
                        </div>
                    </div>
                </div>
            <%}%>
            <% journeys.forEach(function(journey){ %>
                <div class="col-4 mb-3">
                    <%- include('partials/card',  {journey, teaserImgs, isAdmin})%>
                </div>
            <% }) %>
        </div>

    </div>

    <div class="loadingDiv"></div>

    <script>
        function requestView(view) {
            $(".loadingDiv").show();
            let url = "/" + view;
            $.get(url, function (data) {
                $("body").html(data);
                // alert( "success" );
            })
                .done(function () {
                    $(".loadingDiv").hide();
                })
        }


    </script>

</body>

</html>